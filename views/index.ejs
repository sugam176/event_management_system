<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Event Management System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #4e73df;
      --secondary-color: #2e59d9;
      --accent-color: #f8f9fc;
      --text-dark: #5a5c69;
      --text-light: #858796;
    }
    
    body {
      font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      color: var(--text-dark);
      background-color: var(--accent-color);
      line-height: 1.6;
    }

    .navbar {
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    }

    .navbar-brand {
      font-weight: 800;
      font-size: 1.25rem;
    }

    .user-email {
      font-weight: 600;
      font-size: 0.85rem;
    }

    .hero {
      background: linear-gradient(rgba(78, 115, 223, 0.8), rgba(78, 115, 223, 0.8)), 
                  url('https://images.unsplash.com/photo-1587825140708-dfaf72ae4b04?fit=crop&w=1600&q=80') center/cover no-repeat;
      color: white;
      height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      position: relative;
    }

    .hero-content {
      max-width: 800px;
      padding: 0 20px;
    }

    .hero h1 {
      font-weight: 700;
      margin-bottom: 1.5rem;
      font-size: 2.5rem;
    }

    .hero p {
      font-size: 1.25rem;
      opacity: 0.9;
    }

    .section-title {
      font-weight: 700;
      color: var(--primary-color);
      margin-bottom: 2rem;
      position: relative;
      display: inline-block;
    }

    .section-title:after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 50px;
      height: 3px;
      background: var(--primary-color);
    }

    .event-card {
      transition: all 0.3s ease;
      border: none;
      border-radius: 0.35rem;
      overflow: hidden;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
      margin-bottom: 1.5rem;
      height: 100%;
      cursor: pointer;
    }

    .event-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0.5rem 1.5rem 0 rgba(58, 59, 69, 0.2);
    }

    .card-img-top {
      height: 180px;
      object-fit: cover;
      width: 100%;
    }

    .card-body {
      padding: 1.5rem;
    }

    .card-title {
      font-weight: 700;
      color: var(--primary-color);
      margin-bottom: 0.75rem;
    }

    .card-text {
      color: var(--text-light);
      margin-bottom: 1rem;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      min-height: 4.5em; /* 3 lines * 1.5 line-height */
    }

    .badge {
      font-weight: 600;
      padding: 0.35em 0.65em;
      font-size: 0.75em;
      border-radius: 0.25rem;
      position: absolute;
      top: 10px;
      right: 10px;
    }

    .event-date {
      display: flex;
      align-items: center;
      color: var(--text-light);
      font-size: 0.85rem;
      margin-top: 1rem;
    }

    .event-date i {
      margin-right: 0.5rem;
    }

    footer {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
      color: white;
      padding: 2rem 0;
      margin-top: 3rem;
    }

    /* Placeholder image styling */
    .img-placeholder {
      height: 180px;
      background-color: #e9ecef;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #6c757d;
    }

    /* Modal Styles */
    .modal-img {
      max-height: 400px;
      object-fit: cover;
      width: 100%;
      border-radius: 0.35rem 0.35rem 0 0;
    }

    .modal-header {
      border-bottom: none;
      padding-bottom: 0;
    }

    .modal-body {
      padding-top: 0;
    }

    .modal-badge {
      font-size: 0.9em;
      margin-left: 10px;
      vertical-align: middle;
    }

    @media (max-width: 768px) {
      .hero {
        height: 50vh;
      }
      
      .hero h1 {
        font-size: 2rem;
      }
      
      .hero p {
        font-size: 1rem;
      }

      .card-img-top {
        height: 150px;
      }

      .modal-img {
        max-height: 200px;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="#">
        <i class="fas fa-calendar-alt me-2"></i>EventPro
      </a>
      <div class="ms-auto user-email">
        <i class="fas fa-user-circle me-2"></i>example@email.com
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>Professional Event Management Platform</h1>
      <p class="lead">Streamline your event planning process with our comprehensive management solution. Discover, organize, and track events with ease.</p>
      <button class="btn btn-light btn-lg mt-3 px-4 py-2">Explore Events</button>
    </div>
  </section>

  <!-- Events Section -->
  <section class="container py-5">
    <div class="text-center mb-5">
      <h2 class="section-title">Upcoming Events</h2>
      <p class="text-muted">Browse through our curated selection of upcoming events</p>
    </div>
    
    <div class="row">
      <% schedules.forEach((each) => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card event-card" data-bs-toggle="modal" data-bs-target="#eventModal" 
               onclick="showEventDetails('<%= each._id %>', '<%= each.title %>', '<%= each.description %>', '<%= each.type %>', '<%= each.date %>', '<%= each.image || '' %>')">
            <% if (each.image) { %>
              <img src="/uploads/<%= each.image %>" class="card-img-top" alt="<%= each.title %>">
            <% } else { %>
              <div class="img-placeholder">
                <i class="fas fa-calendar-day fa-3x"></i>
              </div>
            <% } %>
            <% if (each.type === 'Cultural') { %>
              <span class="badge bg-info">Cultural</span>
            <% } else if (each.type === 'Food') { %>
              <span class="badge bg-success">Food</span>
            <% } else if (each.type === 'Notice') { %>
              <span class="badge bg-warning text-dark">Notice</span>
            <% } else { %>
              <span class="badge bg-secondary"><%= each.type %></span>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= each.title %></h5>
              <p class="card-text"><%= each.description %></p>
              <div class="event-date">
                <i class="far fa-calendar-alt"></i>
                <span><%= new Date(each.date).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></span>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- Event Details Modal -->
  <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="eventImageContainer">
            <img id="modalEventImage" src="" class="modal-img mb-4" alt="Event Image">
            <span id="modalEventBadge" class="badge modal-badge"></span>
          </div>
          <h2 id="modalEventTitle" class="mb-3"></h2>
          <p id="modalEventDate" class="text-muted mb-4"></p>
          <p id="modalEventDescription" class="lead"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Register for Event</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-6 text-center text-md-start">
          <h5><i class="fas fa-calendar-alt me-2"></i>EventPro</h5>
          <p class="mb-0">Professional event management solutions for modern organizations.</p>
        </div>
        <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
          <p class="mb-0">&copy; 2025 Event Management System. All rights reserved.</p>
          <div class="mt-2">
            <a href="#" class="text-white mx-2"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-linkedin-in"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-instagram"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showEventDetails(id, title, description, type, date, image) {
      // Set modal content
      document.getElementById('modalEventTitle').textContent = title;
      document.getElementById('modalEventDescription').textContent = description;
      
      // Format date
      const eventDate = new Date(date);
      const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
      document.getElementById('modalEventDate').textContent = eventDate.toLocaleDateString('en-US', options);
      
      // Set image
      const imgElement = document.getElementById('modalEventImage');
      if (image) {
        imgElement.src = `/uploads/${image}`;
        imgElement.style.display = 'block';
      } else {
        imgElement.style.display = 'none';
      }
      
      // Set badge
      const badge = document.getElementById('modalEventBadge');
      badge.textContent = type;
      badge.className = 'badge modal-badge ';
      
      if (type === 'Cultural') {
        badge.classList.add('bg-info');
      } else if (type === 'Food') {
        badge.classList.add('bg-success');
      } else if (type === 'Notice') {
        badge.classList.add('bg-warning', 'text-dark');
      } else {
        badge.classList.add('bg-secondary');
      }
    }
  </script>
</body>
</html>