<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Event Schedule</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f0f2f5;
      }

      .form-container {
        max-width: 700px;
        margin: 50px auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      }

      .form-title {
        font-weight: 600;
        margin-bottom: 25px;
        text-align: center;
        color: #343a40;
      }

      .btn-primary {
        background-color: #007bff;
        border: none;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }

      footer {
        margin-top: 80px;
        padding: 20px;
        background-color: #343a40;
        color: white;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
      <a class="navbar-brand" href="#">ðŸŽ¯ Admin Panel</a>
      <div class="ms-auto text-white">Admin | Event Scheduler</div>
    </nav>

    <!-- Schedule Form -->
    <div class="form-container">
      <h2 class="form-title">ðŸ“… Create a New Event Schedule</h2>

      <form
        action="/admin/createEvent"
        method="POST"
        enctype="multipart/form-data"
      >
        <!-- Event Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Event Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="e.g., Annual Tech Fest"
            required
          />
        </div>

        <!-- Event Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Event Description</label>
          <textarea
            class="form-control"
            id="description"
            name="description"
            rows="4"
            placeholder="Describe the event..."
            required
          ></textarea>
        </div>

        <!-- Event Type -->
        <div class="mb-3">
          <label for="type" class="form-label">Event Type</label>
          <select class="form-select" id="type" name="type" required>
            <option value="" selected disabled>-- Select Event Type --</option>
            <option value="Cultural">Cultural</option>
            <option value="Food">Food</option>
            <option value="Notice">Notice</option>
            <option value="Sports">Sports</option>
            <option value="Workshop">Workshop</option>
          </select>
        </div>

        <!-- Event Date -->
        <div class="mb-3">
          <label for="date" class="form-label">Event Date</label>
          <input
            type="date"
            class="form-control"
            id="date"
            name="date"
            required
          />
        </div>
        <!-- Event Time -->
        <input
          type="time"
          class="form-control"
          id="time"
          name="time"
          required
        />

        <div class="mb-3">
          <label for="venue" class="form-label">Event Venue</label>
          <input
            type="text"
            class="form-control"
            id="venue"
            name="venue"
            placeholder="Event Venue"
            required
          />
        </div>
        <div class="mb-3">
          <label for="pricing" class="form-label">Price: </label>
          <input
            type="number"
            class="form-control"
            id="pricing"
            name="pricing"
            placeholder="Event Price"
            required
          />
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload Banner (Optional)</label>
          <input
            type="file"
            class="form-control"
            id="image"
            name="image"
            accept="image/*"
          />
        </div>

        <!-- Submit -->
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-primary">Create Schedule</button>
        </div>
      </form>
    </div>

    <!-- Footer -->
    <footer>&copy; 2025 Event Management System | Designed by Sugam</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
